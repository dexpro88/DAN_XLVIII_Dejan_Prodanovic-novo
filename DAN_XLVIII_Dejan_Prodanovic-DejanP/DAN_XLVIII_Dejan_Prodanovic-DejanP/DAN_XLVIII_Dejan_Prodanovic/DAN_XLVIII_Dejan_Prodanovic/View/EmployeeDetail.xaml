<Window x:Class="DAN_XLVIII_Dejan_Prodanovic.View.EmployeeDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DAN_XLVIII_Dejan_Prodanovic.View"
        mc:Ignorable="d"
        Title="EmployeeDetail"
        WindowStartupLocation="CenterScreen"
        Height="400"
        Width="600"
        Background="#2e3137">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin"
                    Value="0,0,10,0" />
            <Setter Property="VerticalAlignment"
                    Value="Center" />
            <Setter Property="Padding"
                    Value="10,0,10,0" />
            <Setter Property="Background"
                    Value="#545d6a" />
            <Setter Property="Width"
                    Value="60" />
            <Setter Property="Foreground"
                    Value="White" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0"
                    Orientation="Horizontal">
            <Label FontSize="18"
                   Content="Order details: "
                   VerticalAlignment="Center"
                   Foreground="White" />
        </StackPanel>
        <DataGrid Grid.Row="1"
                  Name="DataGridResults"
                  ItemsSource="{Binding PizzaOrders, UpdateSourceTrigger=PropertyChanged}"
                  SelectedItem="{Binding SelectedOrder,UpdateSourceTrigger=PropertyChanged}"
                  IsReadOnly="True"
                  HeadersVisibility="Column"
                  AutoGenerateColumns="False"
                  HorizontalGridLinesBrush="Black"
                  BorderBrush="Black"
                  Foreground="Black"
                  FontWeight="Bold">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Pizza type"
                                    Binding="{Binding tblPizza.PizzaType}" />
                <DataGridTextColumn Header="Amount"
                                    Binding="{Binding Amount}" />
                <DataGridTextColumn Header="Price"
                                    Binding="{Binding tblPizza.Price}" />
                <DataGridTextColumn Header="JMBG"
                                    Binding="{Binding tblOrder.JMBG}" />
                <DataGridTextColumn Header="Date and time"
                                    Binding="{Binding tblOrder.DateAndTimeOfOrder}" />
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <TextBlock Foreground="White"
                       Text="Total price: "></TextBlock>
            <TextBlock Foreground="White"
                       Text="{Binding TotalPrice}"></TextBlock>
        </StackPanel>
        <TextBlock Grid.Row="4"
                   Foreground="White"
                   FontSize="18"
                   Text="{Binding Status}"></TextBlock>
        <StackPanel Grid.Row="5"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <Button Visibility="{Binding ViewDelete, UpdateSourceTrigger=PropertyChanged}"
                    Width="100"
                    Command="{Binding Delete}"
                    Content="Delete" />
            <Button Visibility="{Binding ViewApprove, UpdateSourceTrigger=PropertyChanged}"
                    Width="100"
                    Command="{Binding Refuse}"
                    Content="Approve" />
            <Button Visibility="{Binding ViewApprove, UpdateSourceTrigger=PropertyChanged}"
                    Width="100"
                    Command="{Binding Approve}"
                    Content="Refuse" />
            <Button Command="{Binding Close}"
                    Content="Close" />
        </StackPanel>
    </Grid>
</Window>
